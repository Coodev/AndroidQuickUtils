<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cesarferreira.quickutils.demo" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="com.cesarferreira.quickutils.demo.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cesarferreira.quickutils.demo.categories.LogCategory"
            android:label="@string/title_activity_log_category"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name="com.cesarferreira.quickutils.demo.categories.MathCategory"
            android:label="@string/title_activity_math_category" >
        </activity>
        <activity
            android:name="com.cesarferreira.quickutils.demo.categories.AnimationCategory"
            android:label="@string/title_activity_animation_category" >
        </activity>
    </application>

</manifest>