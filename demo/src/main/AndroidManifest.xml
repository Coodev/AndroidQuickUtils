<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cesarferreira.quickutils.demo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name=".BlurActivity"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".categories.LogCategory"
            android:label="@string/title_activity_log_category"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name=".categories.MathCategory"
            android:label="@string/title_activity_math_category" />
        <activity
            android:name=".categories.AnimationCategory"
            android:label="@string/title_activity_animation_category" />
        <activity
            android:name=".TestingBlur"
            android:theme="@style/Theme.Base.AppCompat"
            android:label="@string/title_activity_testing_blur"></activity>
    </application>

</manifest>